<table>
    <thead>
        <tr>
            <th colspan="3"> <%= @cat.name %> </th>
        </tr>
    </thead>
    <tbody>
        <tr> <td> Birth Date </td> <td> : </td> <td> <%= @cat.birth_date %></td> </tr>
        <tr> <td> Sex </td> <td> : </td> <td> <%= @cat.sex %></td> </tr>
        <tr> <td> Color  </td> <td> : </td> <td> <%= @cat.color %></td> </tr>
        <tr> <td> Description </td> <td> : </td> <td> <%= @cat.description %> </tr>
    </tbody>
</table>

<br>

<form action="<%= cat_url(@cat) %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Cat">
</form>

<br> 

<a href="<%= cats_url %>"> Home Page </a>  
<br>
<a href="<%= edit_cat_url(@cat) %>"> Upgrade Cat </a>  

